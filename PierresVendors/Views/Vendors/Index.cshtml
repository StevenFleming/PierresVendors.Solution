@using PierresVendors.Models;
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Pierres Vendors</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"
    />
  </head>
  <body>
    
<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No Vendors have been added yet!</h3>
} 

@foreach (Vendor vendor in Model)
{
    <li>@Html.ActionLink($"{ vendor.Name }", "Details")</li>
}

  </body>
</html>